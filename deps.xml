<install root="make_all">
    <dep name="make_all">
        <dep>ROS_indigo</dep>
        <dep>ROSPlan</dep>
        <dep>robotican</dep>
        <dep>bgumodo</dep>
        <run dir="~/catkin_ws">
            # make pkgs
            catkin_make
        </run>
        <run dir="~">
            # expend shell env
            echo "source ~/catkin_ws/devel/setup.bash" >> ~/.bashrc
        </run>
    </dep>

    <dep name="ROS_indigo">
        <run dir="~">
            # accept software from packages.ros.org
            sudo sh -c 'echo "deb http://packages.ros.org/ros/ubuntu $(lsb_release -sc) main" > /etc/apt/sources.list.d/ros-latest.list'
            # setup keys
            sudo apt-key adv --keyserver hkp://ha.pool.sks-keyservers.net:80 --recv-key 0xB01FA116
            # update Debian package
            sudo apt-get update
            # install following modules: ROS, rqt, rviz, robot-generic libraries, 2D/3D simulators, navigation and 2D/3D perception
            sudo apt-get install ros-indigo-desktop-full
            # init and update rosdep
            sudo rosdep init
            rosdep update
            # setup environment
            echo "source /opt/ros/indigo/setup.bash" >> ~/.bashrc
            source .bashrc
            # install rosinstall
            sudo apt-get install python-rosinstall
        </run>
    </dep>

    <dep name="init_ws">
        <cond name="dir_check" complement="true">

        </cond>
        <run dir="~" cond="dir_check">
            mkdir -p ~/catkin_ws/src
        </run>
        <run dir="~/catkin_ws/src">
            git init
        </run>
    </dep>

    <dep name="ROSPlan">
        <dep>ROS_indigo</dep>
        <dep>init_ws</dep>
        <dep>move_base</dep>
        <run dir="~/catkin_ws/src">
            # get prerequisites
            sudo apt-get install flex ros-indigo-mongodb-store ros-indigo-tf2-bullet freeglut3-dev
            # get code
            git clone https://github.com/clearpathrobotics/occupancy_grid_utils
            git clone https://github.com/KCL-Planning/rosplan
        </run>
        <run>
            # copy updated .pddl file
            cp -f aux/domain.pddl ~/catkin_ws/src/rosplan/rosplan_config/planner/
        </run>
        <run dir="~/catkin_ws">
            # compile
            catkin_make
        </run>
    </dep>

    <dep name="move_base">
        <dep>ROS_indigo</dep>
        <dep>init_ws</dep>
        <run dir="~/catkin_ws/src">
            sudo apt-get install ros-indigo-move-base
        </run>
    </dep>

    <dep name="robotican">
        <dep>ROS_indigo</dep>
        <dep>init_ws</dep>
        <dep>qt_ros</dep>
        <dep>moveit</dep>
        <dep>control_toolbox</dep>
        <dep>gazebo_ros_pkgs</dep>
        <dep>serial</dep>
        <dep>dynamixel_motor</dep>
        <run dir="~/catkin_ws/src">
            # currently using bgumodo/robotican/temp_branch
            # clone repository
            git clone https://github.com/bgumodo/robotican/ -b temp_branch --single-branch
        </run>
        <run>
            # copy current work file
            cp -f aux/demo_pick_node.cpp ~/catkin_ws/src/robotican/robotican_demos/src/
        </run>
        <run dir="~/catkin_ws">
            # compile
            catkin_make
        </run>
    </dep>

    <dep name="qt_ros">
        <dep>ROS_indigo</dep>
        <dep>init_ws</dep>
        <run dir="~/catkin_ws/src">
            git clone https://github.com/stonier/qt_ros -b indigo --single-branch
        </run>
    </dep>

    <dep name="moveit">
        <dep>ROS_indigo</dep>
        <dep>init_ws</dep>
        <run>
            sudo apt-get install ros-indigo-moveit-full
        </run>
    </dep>

    <dep name="control_toolbox">
        <dep>ROS_indigo</dep>
        <dep>init_ws</dep>
        <run>
            sudo apt-get install ros-indigo-ros-control ros-indigo-ros-controllers
        </run>
    </dep>

    <dep name="gazebo_ros_pkgs">
        <dep>ROS_indigo</dep>
        <dep>init_ws</dep>
        <run>
            sudo apt-get install ros-indigo-gazebo-ros-pkgs ros-indigo-gazebo-ros-control
        </run>
    </dep>

    <dep name="serial">
        <dep>ROS_indigo</dep>
        <dep>init_ws</dep>
        <run dir="~/catkin_ws/src">
            # get code
            git clone https://github.com/wjwwood/serial.git
        </run>
        <run dir="~/catkin_ws/src/serial">
            # make and install
            make
            make install
        </run>
    </dep>

    <dep name="dynamixel_motor">
        <dep>ROS_indigo</dep>
        <dep>init_ws</dep>
        <run>
            sudo apt-get install ros-indigo-dynamixel-motor
        </run>
    </dep>

    <dep name="bgumodo">
        <dep>ROS_indigo</dep>
        <dep>init_ws</dep>
        <dep>audio_common</dep>
        <dep>pocketsphinx</dep>
        <dep>gstreamer-0.10</dep>
        <run dir="~/catkin_ws/src">
            # get code
            git clone https://github.com/bgumodo/bgumodo-dev.git
        </run>
    </dep>

    <dep name="audio_common">
        <dep>ROS_indigo</dep>
        <dep>init_ws</dep>
        <run dir="~/catkin_ws/src">
            git clone https://github.com/ros-drivers/audio_common -b indigo-devel --single-branch
        </run>
    </dep>

    <dep name="pocketsphinx">
        <dep>ROS_indigo</dep>
        <dep>init_ws</dep>
        <run>
            sudo apt-get install ros-indigo-pocketsphinx
        </run>
    </dep>

    <dep name="gstreamer-0.10">
        <dep>ROS_indigo</dep>
        <dep>init_ws</dep>
        <run>
            sudo apt-get install libgstreamer0.10-dev libgstreamer-plugins-base0.10-dev
        </run>
    </dep>
</install>